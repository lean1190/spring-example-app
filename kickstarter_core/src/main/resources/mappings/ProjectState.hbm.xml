<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.edu.unlp.info.lifia.grupo1.model">
	
	<class name="ProjectState">
	
		<id name="id" column="id_project_state">
			<generator class="native"/>
		</id>
		
		<discriminator column="type" type="string"/>
		
		<subclass name="Active" discriminator-value="Active" />
		
		<subclass name="Cancelled" discriminator-value="Cancelled" />
		
		<subclass name="Finished" discriminator-value="Finished" />
		
		<subclass name="Suspect" discriminator-value="Suspect" />
		 
	</class>
</hibernate-mapping>	